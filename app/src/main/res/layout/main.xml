<?xml version="1.0" encoding = "utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    android:orientation = "vertical"
    android:layout_width = "fill_parent"
    android:layout_height = "fill_parent"
    >
    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.hydapps.cricketcalc.ui.AdFragment"
        android:id="@+id/adfragment"></fragment>


    <LinearLayout
    android:orientation = "horizontal"
    android:layout_width = "fill_parent"
    android:layout_height = "50dp"
    >
<HorizontalScrollView
	android:layout_width = "fill_parent"
	android:layout_weight = "0.1"
	android:layout_height = "50dp"
	android:id = "@+id/horizontal_scroll"
	>
<LinearLayout
	android:orientation = "horizontal"
	android:layout_width = "fill_parent"
	android:layout_height  = "fill_parent"
	android:id = "@+id/ll_ballholder" 
	/>
</HorizontalScrollView>
<Button
	android:layout_width = "fill_parent"
	android:layout_height = "50dp"
	android:layout_weight = "0.9"
	android:id = "@+id/button_undo"
	android:background = "@drawable/undo"
	/>
</LinearLayout>
<LinearLayout
	android:orientation = "horizontal"
	android:layout_width = "fill_parent"
	android:layout_height = "fill_parent"
	android:layout_weight = ".7"
	>
<LinearLayout
	android:layout_width = "fill_parent"
	android:layout_height = "fill_parent"
	android:orientation = "vertical"
	android:layout_weight = "1"
	android:background = "@drawable/text_bg">
<TextView
	android:layout_width = "fill_parent"
	android:layout_height = "fill_parent"
	android:layout_weight = "0.8"
	android:paddingLeft = "15dp"
	android:textSize = "15dp"
	android:textColor = "@android:color/white"
	android:text = "@string/str_score"
	/>
<TextView
	android:layout_width = "fill_parent"
	android:layout_height = "fill_parent"
	android:layout_weight = "0.2"
	android:textSize = "25dp"
	android:textStyle = "bold"
	android:textColor = "@android:color/white"
	android:gravity = "center"
	android:id = "@+id/tv_score"
	/>
	</LinearLayout>
<LinearLayout
	android:layout_width = "fill_parent"
	android:layout_height = "fill_parent"
	android:orientation = "vertical"
	android:layout_weight = "1"
	android:background = "@drawable/text_bg">
<TextView
	android:layout_width = "fill_parent"
	android:layout_height = "fill_parent"
	android:layout_weight = "0.8"
	android:paddingLeft = "15dp"
	android:textSize = "15dp"
	android:textColor = "@android:color/white"
	android:text = "@string/str_overs"
	/>
<TextView
	android:layout_width = "fill_parent"
	android:layout_height = "fill_parent"
	android:layout_weight = "0.2"
	android:textSize = "25dp"
	android:textStyle = "bold"
	android:textColor = "@android:color/white"
	android:gravity = "center"
	android:id = "@+id/tv_overs"
	/>
	</LinearLayout>
	</LinearLayout>
<LinearLayout
	android:orientation = "vertical"
	android:layout_width = "fill_parent"
	android:layout_height = "fill_parent"
	android:layout_weight = ".3"
	>
<LinearLayout
	android:orientation = "horizontal"
	android:layout_width = "fill_parent"
	android:layout_height  = "fill_parent"
	android:layout_weight = "1"
	>
<Button
	style = "@style/button_score"
	android:id = "@+id/button_dotball"
	android:text = "+0"
	/>
<Button
	style = "@style/button_score"
	android:id = "@+id/button_one"
	android:text = "+1"
	/>
<Button
	style = "@style/button_score"
	android:id = "@+id/button_two"
	android:text = "+2"
	/>
<Button
	style = "@style/button_score"
	android:id = "@+id/button_three"
	android:text = "+3"
	android:visibility="gone"
	/>
</LinearLayout>
<LinearLayout
	android:orientation = "horizontal"
	android:layout_width = "fill_parent"
	android:layout_height  = "fill_parent"
	android:layout_weight = "1"
	>
<Button
	style = "@style/button_score"
	android:id = "@+id/button_sameball"
	android:text = "Same Ball"
	/>
<Button
	style = "@style/button_score"
	android:id = "@+id/button_four"
	android:text = "+4"
	/>
<Button
	style = "@style/button_score"
	android:id = "@+id/button_six"
	android:text = "+6"
	/>
</LinearLayout>
<LinearLayout
	android:orientation = "horizontal"
	android:layout_width = "fill_parent"
	android:layout_height  = "fill_parent"
	android:layout_weight = "1"
	>
<Button
	style = "@style/button_score"
	android:id = "@+id/button_wide"
	android:text = "Wide Ball"
	/>
<Button
	style = "@style/button_score"
	android:id = "@+id/button_nobe"
	android:text = "No Ball"
	/>
<Button
	style = "@style/button_score"
	android:id = "@+id/button_wicket"
	android:text = "Wicket"
	/>
</LinearLayout>
</LinearLayout>
</LinearLayout>
