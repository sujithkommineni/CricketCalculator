<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_main</item>
        <item name="colorAccent">@color/color_main</item>
    </style>

    <style name = "button_score">
        <item name = "android:layout_width">fill_parent</item>
        <item name = "android:layout_height">fill_parent</item>
        <item name = "android:layout_weight">1</item>
        <item name = "android:layout_margin">10dp</item>
        <item name = "android:textSize">20dp</item>
        <item name = "android:textStyle">bold</item>
        <!-- <item name = "android:onClick">handleButtonClick</item> -->
        <item name = "android:background">@drawable/bg_button</item>
        <item name = "android:textColor">@android:color/white</item>
    </style>
    <style name="default_text">
        <item name = "android:textSize">20dp</item>
        <item name = "android:textColor">@android:color/white</item>
    </style>

    <style name="cric_button">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
